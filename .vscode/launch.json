  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Start with debug",
      "cwd": "ts",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**"
      ],
      "runtimeArgs": ["-r", "ts-node/register"],
      "args": ["${cwd}/ts/src/${fileBasename}"],
      "outputCapture": "std"
    },
    {
      "type": "node",

      "request": "launch",
      "name": "Tests with debug file",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**"
      ],
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/ts/node_modules/.bin/jest",
        "--runInBand",
        "--coverage",
        "false",
        "${fileBasename}"
      ],
      "outputCapture": "std"
    }
  ]
}
